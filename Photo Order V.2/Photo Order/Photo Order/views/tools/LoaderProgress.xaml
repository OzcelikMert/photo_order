<Window x:Class="Photo_Order.views.tools.LoaderProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Photo_Order.views.tools"
        mc:Ignorable="d" Title="Loader" Height="350" Width="350" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <ProgressBar x:Name="loaderProgress" Height="35" Minimum="0" IsIndeterminate="False" Background="{x:Null}" BorderThickness="0" BorderBrush="Transparent" Foreground="#FF03C10E"/>
            <TextBlock x:Name="loaderTextInfo" Text="Yukleniyor Lutfen Bekleyiniz" FontWeight="Normal" TextAlignment="Center" Margin="0,0,0,25" />
            <TextBlock x:Name="loaderText" Text="Yukleniyor Lutfen Bekleyiniz..." FontSize="20" FontWeight="Bold" TextAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
