<Page x:Class="Photo_Order.views.pages.events.add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Photo_Order.views.pages.events"
      mc:Ignorable="d" Background="Transparent">
    <StackPanel HorizontalAlignment="Center" Margin="15,15,15,15" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <Image Width="500" Height="350" Source="/assets/images/empty.jpg" Stretch="Fill" x:Name="image"/>
            <Button Content="Resim Ekle"  Width="150" Height="35" Click="chooseImageClick" Margin="0,5,0,0" Style="{StaticResource addImage}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="250">
                <StackPanel>
                    <TextBlock Text="Isim*" Style="{StaticResource inputInfoTextBlock}"/>
                    <TextBox Text="" x:Name="name" Style="{StaticResource editTextBox}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Width="250" Margin="5,0,0,0"></StackPanel>
        </StackPanel>
        <Button Content="Kaydet" HorizontalAlignment="Right" Width="150" Height="35" x:Name="save" Click="saveClick" Margin="0,15,0,0" Style="{StaticResource save}" />
    </StackPanel>
</Page>
