<Page x:Class="Photo_Order.views.pages.customers.edit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Photo_Order.views.pages.customers"
      mc:Ignorable="d" Background="Transparent">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Margin="5,5,5,5">
        <TextBlock Text="Yeni Şifre" Style="{StaticResource inputInfoTextBlock}"/>
        <PasswordBox x:Name="newPassword" Style="{StaticResource editPasswordBox}"/>
        <Button Content="Güncelle" Margin="0,15,0,0" Height="35" Click="saveClick" Style="{StaticResource save}" />
    </StackPanel>
</Page>
