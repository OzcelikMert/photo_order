<Page x:Class="Photo_Order_Customer.views.pages.products.list"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Photo_Order_Customer.views.pages.products"
      mc:Ignorable="d" Background="Transparent">
    <Grid>
        <TextBlock Text="{StaticResource langSelectImageForAddtoBasket}" Style="{StaticResource infoMessageTextBlock}"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" x:Name="scroll" Margin="0,30,0,0">
            <WrapPanel Orientation="Horizontal" x:Name="productList" Margin="10,10,10,10">
            </WrapPanel>
        </ScrollViewer>
        <StackPanel x:Name="pagination" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,15,0,0" >
            <Button Content="1" Height="30" MinWidth="50" Style="{StaticResource language}"/>
            <Button Content="255" Height="30" MinWidth="50" Style="{StaticResource language}"/>
        </StackPanel>
    </Grid>
</Page>
